<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" Background="#FFF5D1A3" Foreground="Black" BorderBrush="#FFFB3737">
    <Grid>
        <Canvas Margin="100,0,100,100"  Background="#FFF1EDED" Height="480" Width="600">
            <Border BorderBrush="#FF119A33" BorderThickness="5,5,5,5" Height="480" Width="600" HorizontalAlignment="Center" VerticalAlignment="Top">
            </Border>
            <Ellipse HorizontalAlignment="Center" Height="{Binding BallVal}" Canvas.Left="{Binding newXPosition}" Canvas.Top="{Binding newYPosition}" Stroke="Black" VerticalAlignment="Top" Width="{Binding BallVal}" Fill="Black" />
        </Canvas>
        <TextBox HorizontalAlignment="Center" Margin="0,514,0,0" TextWrapping="Wrap" Text="{Binding BallVal}"  VerticalAlignment="Top" Width="200" Height="40" TextAlignment="Center" FontSize="24px" BorderBrush="#FF119A33" BorderThickness="3,3,3,3" />
        <Button Margin="50,494,530,10" Content="START" FontSize="40" Command="{Binding StartCommand}" ></Button>
        <Button Margin="535,494,45,10" Content="STOP" FontSize="40"></Button>

    </Grid>
</Window>
