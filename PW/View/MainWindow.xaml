<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" Background="#FFF5D1A3" Foreground="Black" BorderBrush="#FFFB3737">
    <Grid>
        <Grid Margin="100,0,100,100"  Background="#FFF1EDED">
            <Border BorderBrush="#FF119A33" BorderThickness="5,5,5,5">
            </Border>
            <Ellipse HorizontalAlignment="Center" Height="{Binding BallVal}" Margin="200,202,0,0" Stroke="Black" VerticalAlignment="Top" Width="{Binding BallVal}" Fill="Black"/>

        </Grid>
        <TextBox HorizontalAlignment="Left" Margin="290,504,0,0" TextWrapping="Wrap" Text="{Binding BallVal}"  VerticalAlignment="Top" Width="200" Height="40" TextAlignment="Center" FontSize="24px" BorderBrush="#FF119A33" BorderThickness="3,3,3,3"/>
        <Slider Margin="400,0,340,0"/>

    </Grid>
</Window>
